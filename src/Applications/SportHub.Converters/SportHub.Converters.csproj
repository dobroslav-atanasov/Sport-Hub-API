    <ProjectReference Include="..\..\Common\SportHub.Common.Helpers\SportHub.Common.Helpers.csproj" />
    <ProjectReference Include="..\..\Data\SportHub.Data.Seeders\SportHub.Data.Seeders.csproj" />
    <ProjectReference Include="..\..\Services\SportHub.Services.Data\SportHub.Services.Data.csproj" />
    <ProjectReference Include="..\..\Services\SportHub.Services\SportHub.Services.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="log4net.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
